//- Container: section.ly-pusher-content(app-view-segment="1")
.md-search-view

  //- Body
  .container
    ol.md-search-view-list.md-user-list.clearfix
      li.md-search-view-list-item.md-user-list-item(ng-repeat="user in searchViewCtrl.searchResults")
        a.md-user-list-item-picture(href="")
          img(ng-src="{{user.profile_picture}}")
        .md-user-list-item-detail
          a.md-user-list-item-detail-name(href="") {{user.name}}
        .md-user-list-item-actions
          a.btn(href="", ng-click="searchViewCtrl.addUserAsFriend(user)", ng-disabled="user.added", ng-class="{'btn-primary': user.added && !user.pending, 'btn-success': !(user.added && !user.pending)}")
            | {{user | searchFriendsStatusFilter}}

    p.lead(ng-show="searchViewCtrl.showNoResults") Sorry, we cannot find user with name "{{searchViewCtrl.lastSearchInput}}" that is not your friend
