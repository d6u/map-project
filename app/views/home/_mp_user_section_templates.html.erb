<!-- mp-user-section -->
<script type="text/ng-template" id="mp_user_section_tempalte_logout">
  <a href="" class="mp-user-section-close-button" ng-click="interface.showUserSection = false"><i class="icon-remove"></i></a>

  <h1>Map Project <a href=""><small>about this</small></a></h1>

  <p>
    <a href="" class="btn btn-primary" ng-click="fbLogin()">Login with Facebook</a>
    <a href="" class="btn btn-default" ng-click="interface.showUserSection = false">Maybe later</a>
  </p>

  <p class="lead">OR</p>

  <form name="">
    <fieldset>
      <legend>Register</legend>
      <div class="form-group">
        <label for="mp_user_section_input_email">Email address</label>
        <input type="text" class="form-control" id="mp_user_section_input_email" placeholder="Enter email">
      </div>
      <div class="form-group">
        <label for="mp_user_section_input_password">Password</label>
        <input type="password" class="form-control" id="mp_user_section_input_password" placeholder="Password">
      </div>
      <div class="form-group">
        <label for="mp_user_section_input_confirm_password">Confirm password</label>
        <input type="password" class="form-control" id="mp_user_section_input_confirm_password" placeholder="Confirm password">
      </div>
      <p class="help-block">Already has an account? <a href="" ng-click="showEmailLogin()">Login here</a></p>
      <button class="btn btn-success">Submit</button>
    </fieldset>
  </form>
</script>


