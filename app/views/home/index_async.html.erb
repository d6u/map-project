    // load all of the dependencies asynchronously.
    var getLoginStatus = $.Deferred();
    var getUserLocation = $.Deferred();

    $.ajax('http://www.geoplugin.net/json.gp', {
      dataType: 'jsonp',
      jsonp: 'jsoncallback',
      success: function(data) {
        window.userLocation = {
          latitude: data.geoplugin_latitude,
          longitude: data.geoplugin_longitude
        };
        getUserLocation.resolve();
      }
    });

    $script([
      '//connect.facebook.net/en_US/all.js'
    ], function() {

      appendLoadingProgress('Social module loaded...');

      FB.init({
        appId      : '580227458695144',
        channelUrl : location.origin + '/fb_channel.html',
        status     : true,
        cookie     : true,
        xfbml      : true
      });

      FB.getLoginStatus(FBgetLoginStatusCallback);

      function FBgetLoginStatusCallback(response) {
        appendLoadingProgress('User identity checked...');
        if (response.status === 'connected') {
          window.user = {
            fb_access_token: response.authResponse.accessToken,
            fb_user_id: response.authResponse.userID
          };
        } else if (response.status === 'not_authorized') {
          window.user = {};
        } else {
          window.user = {};
        }
        getLoginStatus.resolve();
      }
    });

    $script([
      <%= javascript_path_with_manifest('home/index.js') %>,
      '//maps.googleapis.com/maps/api/js?key=AIzaSyAGJjfEZSf93ey42aqJDIVuOVaLnpUUzWs&libraries=places&sensor=true&callback=initGoogleMaps'
    ], function() {
      appendLoadingProgress('Application layer ready...');
      $.when(getLoginStatus, getUserLocation).then(function() {
        angular.bootstrap(document, ['mapApp']);
      });
    });

    function appendLoadingProgress(message) {
      $('#load_progress').append($('<li>').html(message));
    }

    function initGoogleMaps() {
      appendLoadingProgress('Google Map module loaded...');
    }
